#!/bin/sh

# langs --- languages shell configuration file

# -----------------------------------------------------------------------------
# Rust (cargo)
# -----------------------------------------------------------------------------

test -e "${HOME}/.cargo/env" && . "${HOME}/.cargo/env"

# -----------------------------------------------------------------------------
# Haskell (ghcup)
# -----------------------------------------------------------------------------

test -e "${HOME}/.ghcup/env" && . "${HOME}/.ghcup/env"

# -----------------------------------------------------------------------------
# Java (sdkman)
# -----------------------------------------------------------------------------

test -e "${HOME}/.sdkman/bin/sdkman-init.sh" && \
    . "${HOME}/.sdkman/bin/sdkman-init.sh"

# Java apps fix for dwm
export _JAVA_AWT_WM_NONREPARENTING=1

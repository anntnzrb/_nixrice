#!/bin/sh

# maimpick --- Utility to take screenshots.

# Commentary:

# lets you choose the kind of screenshot to take, including copying the image
# or even highlighting an area to copy.

# dependencies
! installedp 'dmenu' && err "'dmenu' is needed to run this script." && exit 1
! installedp 'maim' && err "'maim' is needed to run this script." && exit 1
! installedp 'xdotool' && err "'xdtool' is needed to run this script." && exit 1

# variables
output="$(date '+%Y%m%d-%H%M%S').png"
maim_cmd="maim -B -m 1"
xclip_cmd="xclip -sel clip -t image/png"
xdotool_cmd="$(xdotool getactivewindow)"
get_active_window="$(xdotool getactivewindow getwindowclassname)"

case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 6 -i -p "Screenshot which area?")" in
"a selected area") ${maim_cmd} -s pic-selected-"${output}" ;;
"current window") ${maim_cmd} -q -d 0.2 -i "${xdotool_cmd}" pic-window-"${get_active_window}"-"${output}" ;;
"full screen") ${maim_cmd} -q -d 0.2 pic-full-"${output}" ;;
"a selected area (copy)") ${maim_cmd} -s | ${xclip_cmd} ;;
"current window (copy)") ${maim_cmd} -q -d 0.2 -i "${xdotool_cmd}" | ${xclip_cmd} ;;
"full screen (copy)") ${maim_cmd} -q -d 0.2 | ${xclip_cmd} ;;
esac

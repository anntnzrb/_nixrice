#!/bin/sh

# get-brightness --- Retrieves screen brightness

# Code:

# do nothing if no display
backlight_dir='/sys/class/power_supply'
test -z "`ls -A "${backlight_dir}"`" && exit 0

# loop through displays
for d in ${backlight_dir}/*; do
	read -r brightness < "${d}/actual_brightness"
done

printf 'â˜€ %s%%\n' "${brightness}"

exit 0

#!/bin/sh

# ctlfn --- Menu wrapper for system control functions.


# Code:

# detect init system
case "$(readlink -f '/sbin/init')" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "😴 suspend\n🔃 reboot\n🖥️ shutdown\n" | dmenu -i -p 'Action: ')" in
	'😴 suspend') ${ctl} suspend-then-hibernate -i ;;
	'🔃 reboot') ${ctl} reboot -i ;;
	'🖥️ shutdown') ${ctl} poweroff -i ;;
	*) exit 1 ;;
esac


exit 0

#!/bin/sh

# ctlfn --- Menu wrapper for system control functions.


# Code:

# detect init system
case "$(readlink -f '/sbin/init')" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ˜´ suspend\nğŸ”ƒ reboot\nğŸ–¥ï¸ shutdown\n" | dmenu -i -p 'Action: ')" in
	'ğŸ˜´ suspend') ${ctl} suspend-then-hibernate -i ;;
	'ğŸ”ƒ reboot') ${ctl} reboot -i ;;
	'ğŸ–¥ï¸ shutdown') ${ctl} poweroff -i ;;
	*) exit 1 ;;
esac


exit 0

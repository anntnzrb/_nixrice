# -----------------------------------------------------------------------------
# terminal
# -----------------------------------------------------------------------------
# chord: Super + Return

# - 'a'         -- pulsemixer
# - 'e'         -- $EDITOR
# - 'i'         -- system monitor
# - 'n'         -- network manager
# - 'BackSpace' -- show this file

# terminal emulator
super + Return ; {Return,a,e,i,n,BackSpace}
  $TERMINAL {_,-e 'pulsemixer',-e $EDITOR,-e 'htop',-e 'nmtui',-e less $HOME/.config/sxhkd/sxhkdrc}

# -----------------------------------------------------------------------------
# apps
# -----------------------------------------------------------------------------
# chord: Super + w

# - 'e' -- emacs
# - 'f' -- $FILE
# - 'w' -- $BROWSER

super + w ; {e,f,w}
  {emacs,$FILE,$BROWSER}

# -----------------------------------------------------------------------------
# GNU Emacs
# -----------------------------------------------------------------------------
# chord: Super + e

# - 'e' -- runemacs
# - 'k' -- kill all Emacs processes

super + e ; {e,k}
  {runemacs,kill -15 `pidof -s 'emacs'`}

# -----------------------------------------------------------------------------
# dmenu
# -----------------------------------------------------------------------------
# chord: Super + d

# - 'd' -- a run dialog/app launcher
# - 'm' -- mount device
# - 'u' -- umount device
# - 'v' -- display selector dropdown
# - 'grave' -- display selector dropdown

super + d; {d,m,u,v,grave}
  {dmenu_run -i -p 'summon:',dmenumount,dmenuumount,displayselect,dmenuunicode}

# -----------------------------------------------------------------------------
# utils
# -----------------------------------------------------------------------------
# chord: Super + Escape

# - 'p' -- poweroff
# - 'r' -- reboot
# - 'z' -- suspend
# - 'w' -- simulate alt + F4 (kill active window)
# - 'x' -- kill Xorg session
# - '/' -- reload sxhkd

super + Escape ; {p,r,z,w,x,slash}
  {poweroff,reboot,systemctl suspend,kill -15 `xdotool getactivewindow getwindowpid`,pkill -15 'X',pkill -USR1 'sxhkd'}

# -----------------------------------------------------------------------------
# audio
# -----------------------------------------------------------------------------

# mute
XF86AudioMute
  pamixer -t

# increase/decrease
XF86Audio{Lower,Raise}Volume
  pamixer -{d,i} 5

# brightness
# increase/decrease
XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 10

# screenshot utility dropdown
Print
  maimpick

#!/bin/sh

# cpyclip --- Copies input file's content to clipboard.

# Commentary:

# Requires xclip & running Xorg session.

# Code:

# checks
deps='xclip'
for p in ${deps}; do
    ! test -x "`command -v "${p}"`" \
    && printf "'%s' is required but it is not installed\n" "${p}" >&2 \
    && exit 1
done

test ${#} -ne 1 && printf 'Usage: cpyclip <file>\n' >&2 && exit 1

xclip -sil -sel clip -i "${1}"
printf "file's content has been copied to the clipboard.\\n"
file "${1}"

exit 0

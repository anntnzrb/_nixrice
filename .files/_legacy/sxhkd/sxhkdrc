# -----------------------------------------------------------------------------
# terminal
# -----------------------------------------------------------------------------
# chord: Super + Return

# - 'Return' -- $TERMINAL
# - 'a'      -- pulsemixer
# - 'e'      -- $EDITOR
# - 'i'      -- system monitor

# terminal emulator
super + Return ; {Return,a,e,i}
  $TERMINAL {_,-e 'pulsemixer',-e $EDITOR,-e 'htop'}

# -----------------------------------------------------------------------------
# apps
# -----------------------------------------------------------------------------
# chord: Super + w

# - 'e' -- emacs
# - 'f' -- $FILE
# - 'w' -- $BROWSER

super + w ; {e,f,w}
  {emacs,$FILE,$BROWSER}

# -----------------------------------------------------------------------------
# dmenu
# -----------------------------------------------------------------------------
# chord: Super + d

# - 'd'     -- a run dialog/app launcher
# - 'm'     -- mount device
# - 'u'     -- umount device
# - 'v'     -- display selector dropdown
# - 'grave' -- display selector dropdown

super + d; {d,m,u,v,grave}
  {dmenu_run -i -p 'summon:',dmenumount,dmenuumount,displayselect,dmenuunicode}

# -----------------------------------------------------------------------------
# utils
# -----------------------------------------------------------------------------
# chord: Super + Escape

# - 'w' -- simulate alt + F4 (kill active window)
# - 'x' -- kill Xorg session
# - '.' -- system control functions (ctlfn)
# - '/' -- reload sxhkd

super + Escape ; {w,x,period,slash}
  {kill -15 `xdotool getactivewindow getwindowpid`,pkill -15 'X',ctlfn,pkill -USR1 'sxhkd'}

# -----------------------------------------------------------------------------
# audio
# -----------------------------------------------------------------------------

# mute
XF86AudioMute
  pamixer -t

# increase/decrease
XF86Audio{Lower,Raise}Volume
  pamixer -{d,i} 5

# brightness
# increase/decrease
XF86MonBrightness{Down,Up}
  brightnessctl set {2%-,+2%}

# screenshot utility dropdown
Print
  sshootr

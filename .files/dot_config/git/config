  username = anntnzrb
  email    = anntnzrb@protonmail.com

[alias]
  br      = branch -v
  ca      = commit --ammend
  cm      = commit -m
  co      = checkout
  cob     = checkout -b
  d       = diff
  last    = log -1 HEAD
  lg      = log --graph --decorate --stat
  lga     = log --all --graph --decorate --stat
  ls      = ls-files
  ps      = push
  st      = status -sb
  unstage = reset --hard HEAD

  # function-aliases
  acp = "!f() { git add -A ; git commit -am \"`date '+%F :: %T (%Z)'`\" ; git push; }; f"

{
	"user input with data type request": {
		"prefix": "!input",
		"body": [
			"${1|str,int,float|}(input(\"$0: \"))"
		],
		"description": "user input with data type request"
	},
	"print with formatting": {
		"prefix": "!print",
		"body": [
			"print(f\"${0:foo}\")"
		],
		"description": "print with formatting"
	},
	"open file and choose mode": {
		"prefix": "!openf",
		"body": [
			"with open(file=\"${1:fileName.extension}\", mode=\"${2|r,w,a,r+,w+|}\", encoding=\"utf-8\") as ${3:fileName}:",
			"    ${0:pass}"
		],
		"description": "open file and choose mode"
	}
}

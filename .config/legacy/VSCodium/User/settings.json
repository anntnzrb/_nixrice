{
    "_comment": "------------------------------------------------------------",
    "_comment": "general",
    "_comment": "------------------------------------------------------------",

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 30000,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "boundary",
    "editor.mouseWheelZoom": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "_comment": "------------------------------------------------------------",
    "_comment": "appearance",
    "_comment": "------------------------------------------------------------",

    "workbench.colorTheme": "Remedy - Dark (Tilted)",
    "workbench.preferredDarkColorTheme": "Remedy - Dark (Tilted)",
    "workbench.preferredLightColorTheme": "Remedy - Bright (Tilted)",
    "workbench.iconTheme": "ayu",
    "editor.fontFamily": "Fira Code Retina",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.rulers": [80],
    "window.menuBarVisibility": "toggle",
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,

    "_comment": "------------------------------------------------------------",
    "_comment": "Code Runner",
    "_comment": "------------------------------------------------------------",

    "code-runner.runInTerminal": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.clearPreviousOutput": true,

    "_comment": "------------------------------------------------------------",
    "_comment": "C",
    "_comment": "------------------------------------------------------------",

    "[c]": {
        "editor.defaultFormatter": "LaurentTreguier.uncrustify"
    },

    "_comment": "------------------------------------------------------------",
    "_comment": "Java",
    "_comment": "------------------------------------------------------------",

    "java.semanticHighlighting.enabled": true,

    "_comment": "------------------------------------------------------------",
    "_comment": "Vi",
    "_comment": "------------------------------------------------------------",

    "vim.leader": ",",
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 600,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [
        {
            "before": ["Z", "Z"],
            "commands": [
                ":wq"
            ]
        },
        {
            "before": ["Z", "Q"],
            "commands": [
                ":q!"
            ]
        }
    ],

    "_comment": "------------------------------------------------------------",
    "_comment": "Uncrustify",
    "_comment": "------------------------------------------------------------",
    "uncrustify.configPath.linux": "$HOME/.config/uncrustify/uncrustify.cfg",

    "_comment": "------------------------------------------------------------",
    "_comment": "Spell Checker",
    "_comment": "------------------------------------------------------------",

    "cSpell.language": "es,en",

    "_comment": "------------------------------------------------------------",
    "_comment": "miscellaneous",
    "_comment": "------------------------------------------------------------",

    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false
}
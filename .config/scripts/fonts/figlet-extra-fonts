#!/bin/sh

# -----------------------------------------------------------------------------
# preamble
# -----------------------------------------------------------------------------

# source utilities
# shellcheck disable=SC1090
. "${LIBSHUTILS:?}/sys-utils"

# -----------------------------------------------------------------------------
# main
# -----------------------------------------------------------------------------

# check if running with elevated priviledges; elevate if not
! is_su && elevate_privs "$0" "$@"

# set download folder
dwnld_folder='/tmp/figlet-fonts'

# download & install
git clone -q 'https://github.com/xero/figlet-fonts.git' "${dwnld_folder}" \
    || exit 1
cp -Rf "${dwnld_folder}/." '/usr/share/figlet/' || exit 1
rm -Rf "${dwnld_folder}"

printf 'figlet fonts were downloaded and applied...\n'

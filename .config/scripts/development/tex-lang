#!/bin/sh

# arch
if [ -x "$(command -v "yay")" ]; then
    # compiler
    yay --needed --noconfirm -S \
        biber \
        pandoc \
        pandoc-citeproc \
        texlive-most

# void
elif [ -x "$(command -v "xbps-install")" ]; then
    # compiler
    sudo xbps-install -Sy \
        biber \
        pandoc \
        texlive-bin
fi

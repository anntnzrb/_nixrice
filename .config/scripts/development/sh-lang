#!/bin/sh

# arch
if [ -x "$(command -v "yay")" ]; then
    ## ALE
    # linter
    yay --needed --noconfirm -Syy shellcheck
    # fixer
    yay --needed --noconfirm -Syy shfmt

# void
elif [ -x "$(command -v "xbps-install")" ]; then
    ## ALE
    # linter
    sudo xbps-install -Sy shellcheck
    # fixed
    sudo xbps-install -Sy shfmt
fi

#!/bin/sh

#                     ██   ██
#  ██████   ██   ██  ░██  ░██
# ░██░░░██ ░░██ ██  ██████░██       ██████  ███████
# ░██  ░██  ░░███  ░░░██░ ░██████  ██░░░░██░░██░░░██
# ░██████    ░██     ░██  ░██░░░██░██   ░██ ░██  ░██
# ░██░░░     ██      ░██  ░██  ░██░██   ░██ ░██  ░██
# ░██       ██       ░░██ ░██  ░██░░██████  ███  ░██
# ░░       ░░         ░░  ░░   ░░  ░░░░░░  ░░░   ░░

# -----------------------------------------------------------------------------
# preamble
# -----------------------------------------------------------------------------

# source utilities
# shellcheck disable=SC1090
. "$(dirname "$(dirname "$(readlink -f "$0")")")/utils"

# -----------------------------------------------------------------------------
# main
# -----------------------------------------------------------------------------

case $SYSTEM in
arch)
    # tools
    $PKG_INSTALL "python4" "python-pip"
    ;;

void)
    # elevate permissions
    elevate_perms "$@"

    # tools
    $PKG_INSTALL "python3" "python-pip"
    ;;

debian)
    # elevate permissions
    elevate_perms "$@"

    # tools
    $PKG_INSTALL "python3" "python-pip"
    ;;
esac

# == post-install
# language server
python3 -m pip install -U "setuptools" "python-language-server"

# [vim::ALE] (fixer)
python3 -m pip install -U "black"

# libs
python3 -m pip install -U \
    "pylint" \
    "pynvim" \
    "rope" \
    "numpy" \
    "matplotlib"

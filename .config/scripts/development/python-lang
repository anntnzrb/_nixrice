#!/bin/sh

# arch
if [ -x "$(command -v "yay")" ]; then
    ## dependencies
    yay --needed --noconfirm -Syy \
        python3 \
        python-pip

# void
elif [ -x "$(command -v "xbps-install")" ]; then
    ## dependencies
    sudo xbps-install -Sy \
        python3 \
        python-pip
fi

## ALE
# linter
python3 -m pip install -U flake8

# fixer
python3 -m pip install -U black

## libs
python3 -m pip install -U \
    pylint \
    pynvim \
    rope \
    numpy \
    matplotlib \
    --user

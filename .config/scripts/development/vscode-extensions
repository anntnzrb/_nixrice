#!/bin/sh

install_vscext() {
    if [ -x "$(command -v "codium")" ] &&
        ! [ -x "$(command -v "code-oss")" ]; then
        codium --install-extension "$1"
    elif [ -x "$(command -v "code-oss")" ] &&
        ! [ -x "$(command -v "codium")" ]; then
        code-oss --install-extension "$1"
    else
        echo "VSCode/Codium not installed"
        exit 1
    fi
}

# general
install_vscext eamodio.gitlens
# install_vscext formulahendry.code-runner
install_vscext visualstudioexptteam.vscodeintellicode

# visual
install_vscext teabyii.ayu
# install_vscext dracula-theme.theme-dracula
install_vscext robbowen.synthwave-vscode

# java
install_vscext redhat.java
install_vscext vscjava.vscode-java-debug
install_vscext vscjava.vscode-java-dependency
install_vscext vscjava.vscode-java-pack
install_vscext vscjava.vscode-java-test

# shell
# install_vscext foxundermoon.shell-format

# markdown
# install_vscext yzhang.markdown-all-in-one
# install_vscext davidanson.vscode-markdownlint

# python
# install_vscext ms-python.python

# uncrustify (formatter/fixer)
install_vscext laurenttreguier.uncrustify

# spell
install_vscext streetsidesoftware.code-spell-checker
install_vscext streetsidesoftware.code-spell-checker-spanish

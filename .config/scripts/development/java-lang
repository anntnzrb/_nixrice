#!/bin/sh

# arch
if [ -x "$(command -v "yay")" ]; then
    # compiler (using lts)
    yay --needed --noconfirm -Syy \
        jdk11-openjdk \
        jre11-openjdk

    # ide
    #yay --needed --noconfirm -S intellij-idea-ce

    ## ALE
    # linter (CoC)

    # fixer
    yay --needed --noconfirm -Syy uncrustify

    # change environment
    archlinux-java status
    sudo archlinux-java set java-11-openjdk
    archlinux-java status

# void
elif [ -x "$(command -v "xbps-install")" ]; then
    # compiler (using lts)
    sudo xbps-install -Sy openjdk11

    ## ALE
    # linter (CoC)
    # fixer
    sudo xbps-install -Sy uncrustify
fi

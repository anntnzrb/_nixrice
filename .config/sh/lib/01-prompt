#!/bin/sh

#   ██                                    ██
#  ░██                                   ░██
#  ░██  ██████   ██   ██ ███████   █████ ░██
#  ░██ ░░░░░░██ ░██  ░██░░██░░░██ ██░░░██░██████
#  ░██  ███████ ░██  ░██ ░██  ░██░██  ░░ ░██░░░██
#  ░██ ██░░░░██ ░██  ░██ ░██  ░██░██   ██░██  ░██
#  ███░░████████░░██████ ███  ░██░░█████ ░██  ░██
# ░░░  ░░░░░░░░  ░░░░░░ ░░░   ░░  ░░░░░  ░░   ░░

# -----------------------------------------------------------------------------
# functions
# -----------------------------------------------------------------------------
_cowsay() { fortune -s | cowsay -f tux; }

_sysfetch() { pfetch; }

# -----------------------------------------------------------------------------
# main
# -----------------------------------------------------------------------------
# generate a random number from a range
_RAND=$(shuf -i1-2 -n1)

case $_RAND in
1)
    _cowsay
    ;;
2)
    _sysfetch
    ;;
esac

#!/bin/sh

#                                                ██
#  ██████                              ██████   ░██
# ░██░░░██ ██████  ██████  ██████████ ░██░░░██ ██████
# ░██  ░██░░██░░█ ██░░░░██░░██░░██░░██░██  ░██░░░██░
# ░██████  ░██ ░ ░██   ░██ ░██ ░██ ░██░██████   ░██
# ░██░░░   ░██   ░██   ░██ ░██ ░██ ░██░██░░░    ░██
# ░██     ░███   ░░██████  ███ ░██ ░██░██       ░░██
# ░░      ░░░     ░░░░░░  ░░░  ░░  ░░ ░░         ░░

# -----------------------------------------------------------------------------
# main
# -----------------------------------------------------------------------------

# generate a random number from a range
# this is slower than shuf, but portable
rnd_n=`awk -v min=1 -v max=2 'BEGIN { srand(); print int(min + rand() * (max - min + 1))}'`

case ${rnd_n} in
1) fortune -s | cowsay -f tux ;;
2) pfetch ;;
*) return 1 ;;
esac

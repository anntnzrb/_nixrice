#!/bin/sh

# **
# gets brightness level of your screen
# *

# *****************************************************************************
# functions
# *****************************************************************************
brightness() {
    # loop through displays
    for display in /sys/class/backlight/*; do
        read -r ACTUAL_BRIGHTNESS <"$display/actual_brightness"
    done
    printf "â˜€ %s%%" "$ACTUAL_BRIGHTNESS"
}

# *****************************************************************************
# main
# *****************************************************************************
brightness

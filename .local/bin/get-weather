#!/bin/sh

# retrieves tiny formatted weather info
#
# should adjust the varibale `LOCATION` to desired location

# set-up location
LOCATION="Guayaquil"

# checks if there's internet connection
fnIs_Net() {
    ping -q -c 1 1.1.1.1 >/dev/null 2>&1
}

if fnIs_Net; then
    printf '⛅ %s'"$(curl -fs "wttr.in/$LOCATION?format='%t'" | sed "s/'//g")"
else
    echo "📡❌"
fi

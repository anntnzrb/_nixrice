#!/bin/bash

# **
# dmenu script to easily access configuration files
# *

declare opts=("alacritty
aliases
functions
i3
nvim
profile
spectrwm
sxhkd
xinitrc
xprofile
xresources
zsh
this-file")

CHOICE=$(printf '%s' "${opts[@]}" | dmenu -c -i -l 20 -bw 2 -fn "Overpass Mono" -p 'edit config file: ')
EDIT="$TERMINAL -e $EDITOR"

case "$CHOICE" in
alacritty)
    $EDIT "$HOME/.config/alacritty/alacritty.yml"
    ;;
aliases)
    $EDIT "$ALIASES"
    ;;
functions)
    $EDIT "$FUNCTIONS"
    ;;
i3)
    $EDIT "$HOME/.config/i3/config"
    ;;
nvim)
    $EDIT "$HOME/.config/nvim/init.vim"
    ;;
profile)
    $EDIT "$HOME/.profile"
    ;;
spectrwm)
    $EDIT "$HOME/.config/spectrwm/spectrwm.conf"
    ;;
sxhkd)
    $EDIT "$HOME/.config/sxhkd/sxhkdrc"
    ;;
xinitrc)
    $EDIT "$HOME/.xinitrc"
    ;;
xprofile)
    $EDIT "$HOME/.xprofile"
    ;;
xresources)
    $EDIT "$HOME/.Xresources"
    ;;
zsh)
    $EDIT "$ZDOTDIR/.zshrc"
    ;;
this-file)
    $EDIT "$HOME/.local/bin/edit-cfgs"
    ;;
esac

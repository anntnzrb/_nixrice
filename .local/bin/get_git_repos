#!/bin/bash

# checks if repo is existants, downloads if false
git_install() {
    for animal in "${REPOS[@]}"; do
        URL="${animal%%;*}"
        FILE="${animal##*;}"
        REPO_DIR="$HOME/lib/repos/$FILE"

        if [ ! -d "$REPO_DIR" ]; then
            printf "downloading \"%s\"...\n" "$FILE"
            git clone -q "$URL" "$REPO_DIR"
            echo "downloaded -> $REPO_DIR"
        else
            printf "skipping...\n\"%s\" is already @ %s\n\n" "$FILE" "$REPO_DIR"
        fi
    done
}
# python-like array to store url;repo_name
REPOS=(
    "git@gitlab.com:anntnzrb/_nixrice.git;_nixrice"
    "git@gitlab.com:anntnzrb/rerum.git;rerum"
    "git@gitlab.com:anntnzrb/uarbs.git;uarbs"
    "git@gitlab.com:anntnzrb/st.git;st"
    "git@gitlab.com:anntnzrb/dwm.git;dwm"
)

# actual script
git_install

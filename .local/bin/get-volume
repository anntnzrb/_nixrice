#!/bin/sh

# get pulseaudio info
vol_stat="$(pactl list sinks)"

# get volume value
vol="$(echo "$vol_stat" | grep '[0-9]\+%' | sed "s,.* \([0-9]\+\)%.*,\1,;1q")"

# check if muted
echo "$vol_stat" | grep -q "Mute: yes" && printf "ğŸ”‡\\n" && exit

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

printf "%s %s%%\n" "$icon" "$vol"
